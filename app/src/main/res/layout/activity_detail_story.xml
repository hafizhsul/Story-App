<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.detail.DetailStoryActivity">

    <ImageView
        android:id="@+id/iv_detail_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome" />

    <TextView
        android:id="@+id/tv_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_detail_photo"
        android:layout_marginTop="16dp"
        android:text="Dicoding"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_name"
        android:layout_marginTop="8dp"
        android:text="Donâ€™t give up! Jangan menyerah dan tetap terus belajar dan berusaha. Jangan berpaku dengan kondisi disabilitas. Berkonsentrasi dengan peluang dan kelebihan itu adalah sebuah keharusan. Allah tidak akan mengubah nasib suatu kaum bilamana kaum tersebut tidak berusaha mengubahnya. Bahkan Rasulullah lebih menyukai orang yang bekerja keras dan tidak berpangku tangan. Jadi niatkan semua karena ibadah."
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</RelativeLayout>
